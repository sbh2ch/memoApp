<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonn.son.memozzang">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MultiMemoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sonn.son.memozzang.MemoInsertActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"></activity>

        <activity
            android:name="com.sonn.son.memozzang.PhotoCaptureActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity
            android:name=".Splash"
            android:theme="@android:style/Theme.NoTitleBar" />

        <activity
            android:name="com.sonn.son.memozzang.PhotoSelectionActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"></activity>

        <activity
            android:name="com.sonn.son.memozzang.HandwritingMakingActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity
            android:name="com.sonn.son.memozzang.PenPaletteDialog"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name="com.sonn.son.memozzang.ColorPaletteDialog"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Dialog"></activity>

        <activity
            android:name="com.sonn.son.memozzang.VideoRecordingActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity
            android:name="com.sonn.son.memozzang.VideoPlayActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity
            android:name="com.sonn.son.memozzang.VideoSelectionActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity
            android:name="com.sonn.son.memozzang.VoiceRecordingActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name="com.sonn.son.memozzang.VoicePlayActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog"></activity>


    </application>

</manifest>
